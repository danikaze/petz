{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@game": ["src/game"],
      "@game/*": ["src/game/*"],
      "@game-assets": ["src/game-assets"],
      "@game-assets/*": ["src/game-assets/*"],
      "@img": ["src/img"],
      "@img/*": ["src/img/*"],
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@themes": ["src/themes"],
      "@themes/*": ["src/themes/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "assets.d.ts",
    "globals.d.ts",
    "build-time-constants/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
